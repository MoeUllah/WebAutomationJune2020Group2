<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Amazon Test Script" parallel="false">

    <listeners>
        <listener class-name="reporting.ExtentReportListener"/>
        <listener class-name="retryanalyzer.RetryListenersClass"/>
    </listeners>

    <parameter name="useCloudEnv" value="false"></parameter>
    <parameter name="cloudEnvName" value="browserstack"></parameter>
    <parameter name="url" value="http://amazon.com"></parameter>
    <parameter name="os" value="Windows"></parameter>
    <parameter name="os_version" value="10"></parameter>
    <parameter name="browserName" value="chrome"></parameter>
    <parameter name="browserVersion" value="84.0"></parameter>
    <!--    <parameter name="selectionValue" value="Women"></parameter>-->
    <!--    <parameter name="email" value="yourEmail"></parameter>-->
    <!--    <parameter name="password" value="yourEmailPassword"></parameter>-->

    <test name="Amazon Pages">

        <classes>

            <class name="amazonpagestest.TestAllFeatures"/>

        </classes>

    </test>

</suite>